@model IEnumerable<WebsiteBanHang.Context.Product_2119110250>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<p style="margin:10px;padding:10px;border:1px solid black;border-radius:5px;width:fit-content;color:white;background:#ff6a00;">
  <a href="@Url.Action("Create","Product")">Thêm mới Sản phẩm</a>
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Name)*@
            <label class="control-label col">Tên Sản phẩm</label>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Avatar)*@
            <label class="control-label col">Hình ảnh</label>
        </th>

        <th>
            @*@Html.DisplayNameFor(model => model.Price)*@
            <label class="control-label col">Giá</label>
        </th>
