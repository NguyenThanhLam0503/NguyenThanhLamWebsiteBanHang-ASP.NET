
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<WebsiteBanHang.Context.Product_2119110250>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Quản lý Sản phẩm</h2>
<style>
    /*  .func_hover {
